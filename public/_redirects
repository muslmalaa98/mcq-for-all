/mcq/favicon.svg  /mcq/favicon.svg 200
/mcq/app-icon.svg /mcq/app-icon.svg 200
/mcq/vite.svg     /mcq/vite.svg 200
/mcq/index.html   /mcq/index.html 200

# SPA fallback (deep links)
/mcq/   /mcq/index.html 200
/mcq/*  /mcq/index.html 200
